{
    "manifest_version": 2,
    "name": "Grammar Checker",
    "version": "1.0",
    "description": "Check grammar in text fields.",
    "permissions": ["activeTab"],
    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html",
      "default_title": "Grammar Checker"
    },
    "icons": {
      "48": "icon.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  